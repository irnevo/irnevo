#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

// Initialize the stack (No need for an explicit function since we will just use NULL)
void initialize(struct Node** top) {
    *top = NULL;
}

// Push an element onto the stack
void push(struct Node** top, int value) {
    struct Node* new_node = (struct Node*)malloc(sizeof(struct Node));
    if (new_node == NULL) {
        printf("Stack overflow, unable to push element.\n");
        return;
    }
    new_node->data = value;
    new_node->next = *top;
    *top = new_node;
    printf("%d pushed onto the stack.\n", value);
}

// Pop an element from the stack
int pop(struct Node** top) {
    if (*top == NULL) {
        printf("Stack underflow, no element to pop.\n");
        return -1;
    }
    struct Node* temp = *top;
    int popped_value = temp->data;
    *top = (*top)->next;
    free(temp);
    return popped_value;
}

// Check if the stack is empty
int isempty(struct Node* top) {
    return top == NULL;
}

// Display the elements of the stack
void display(struct Node* top) {
    if (isempty(top)) {
        printf("Stack is empty.\n");
        return;
    }
    printf("Stack elements: ");
    struct Node* temp = top;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main() {
    struct Node* stack = NULL;
    int choice, value;

    while (1) {
        printf("\n1. Push\n2. Pop\n3. Check if Stack is Empty\n4. Display Stack\n5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        if (choice == 1) {
            printf("Enter value to push: ");
            scanf("%d", &value);
            push(&stack, value);
        } else if (choice == 2) {
            value = pop(&stack);
            if (value != -1) {
                printf("Popped value: %d\n", value);
            }
        } else if (choice == 3) {
            if (isempty(stack)) {
                printf("Stack is empty.\n");
            } else {
                printf("Stack is not empty.\n");
            }
        } else if (choice == 4) {
            display(stack);
        } else if (choice == 5) {
            break;
        } else {
            printf("Invalid choice.\n");
        }
    }
    return 0;
}
