#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

// Push an element onto the stack
void push(struct Node** top, int value) {
    struct Node* new_node = (struct Node*)malloc(sizeof(struct Node));
    if (new_node == NULL) {
        printf("Stack overflow\n");
        return;
    }
    new_node->data = value;
    new_node->next = *top;
    *top = new_node;
}

// Pop an element from the stack
int pop(struct Node** top) {
    if (*top == NULL) {
        return -1; // Indicates underflow
    }
    struct Node* temp = *top;
    int popped_value = temp->data;
    *top = (*top)->next;
    free(temp);
    return popped_value;
}

// Evaluate the postfix expression
int evaluatePostfix(char* exp) {
    struct Node* stack = NULL;
    int i = 0;
    
    while (exp[i] != '\0') {
        if (exp[i] >= '0' && exp[i] <= '9') {
            push(&stack, exp[i] - '0');
        } else {
            // Check if there are enough operands
            int val1 = pop(&stack);
            int val2 = pop(&stack);
            if (val1 == -1 || val2 == -1) {
                printf("Error: insufficient values in the expression.\n");
                return -1; // Indicates error
            }
            switch (exp[i]) {
                case '+':
                    push(&stack, val2 + val1);
                    break;
                case '-':
                    push(&stack, val2 - val1);
                    break;
                case '*':
                    push(&stack, val2 * val1);
                    break;
                case '/':
                    if (val1 != 0) {
                        push(&stack, val2 / val1);
                    } else {
                        printf("Division by zero error.\n");
                        return -1; // Indicates error
                    }
                    break;
                default:
                    printf("Error: invalid operator '%c'.\n", exp[i]);
                    return -1; // Indicates error
            }
        }
        i++;
    }
    
    // The result should be the last remaining item on the stack
    int result = pop(&stack);
    if (stack != NULL) {
        printf("Error: the expression is invalid (too many operands).\n");
        return -1; // Indicates error
    }
    return result;
}

int main() {
    char exp[100];
    printf("Enter a postfix expression: ");
    scanf("%s", exp);
    int result = evaluatePostfix(exp);
    if (result != -1) { // Only print result if no errors occurred
        printf("The result of the postfix expression is: %d\n", result);
    }
    return 0;
}
